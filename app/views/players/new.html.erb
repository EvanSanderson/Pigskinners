
  <%=form_for ([@team, @player]) do |f| %>

    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :position %>
      <%= f.text_field :position %>
    </p>

    <p>
      <%= f.label :p_team %>
      <%= f.text_field :p_team %>
    </p>

